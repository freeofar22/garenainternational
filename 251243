  <script>
    let shareCount = 0;
    function shareNow() {
      shareCount++;
      document.getElementById("shareCount").innerText = shareCount;
      if (shareCount >= 20) {
        document.getElementById("claimBtn").classList.remove("disabled-button");
        document.getElementById("claimBtn").classList.add("button");
        document.getElementById("claimBtn").disabled = false;
        document.getElementById("shareInfo").innerText = "âœ… Share completed. You can now claim 500 Diamonds!";
      }
    }

    function startGeneration() {
      var uid = document.getElementById('uid').value;
      if (!uid || uid.length < 6) {
        alert("Please enter a valid Free Fire UID.");
        return;
      }

      var progressBox = document.getElementById("progressBox");
      var progressText = document.getElementById("progressText");
      progressBox.style.display = "block";

      let steps = [
        "Connecting to Free Fire server...",
        "Verifying UID...",
        "Injecting 500 Diamonds...",
        "Finalizing...",
        "Please complete a verification to receive Diamonds."
      ];

      let i = 0;
      let interval = setInterval(() => {
        progressText.innerText = steps[i];
        i++;
        if (i === steps.length) {
          clearInterval(interval);
          window.location.href = "https://www.profitableratecpm.com/aqvf0fv0z1?key=9a79dd5a4ad70fd76ceb696a2ce90701";
        }
      }, 2000);
    }
  </script>
